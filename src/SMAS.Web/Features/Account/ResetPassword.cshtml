@model SMAS.Web.Features.Account.Models.ResetPasswordViewModel

@{
    PageSettings.Title = "Reset password";
}


<form-wrapper columns="6">
    <form asp-controller="Account" asp-action="ResetPassword" method="post">
        <input asp-for="@Model.TokenParameters.Email" type="hidden" />
        <input asp-for="@Model.TokenParameters.Timestamp" type="hidden" />
        <input asp-for="@Model.TokenParameters.Token" type="hidden" />
        <form-section class="mdl-card mdl-card--expand mdl-shadow--6dp">
            <form-group>
                <label asp-for="Password">Password</label>
                <input asp-for="Password" class="form-control" type="password">
                <span asp-validation-for="Password"></span>
            </form-group>
            <form-buttons class="mdl-card__actions mdl-card--border">
                <button type="submit" class="btn btn-default">Reset Password</button>
            </form-buttons>
        </form-section>
    </form>
</form-wrapper>
