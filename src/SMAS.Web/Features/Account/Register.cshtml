@model SMAS.Web.Features.Account.Models.RegisterViewModel
@{
    PageSettings.Title = "Register";
}

<form-wrapper>
    <form asp-controller="Account" asp-action="Register" asp-route-returnurl="@Model.ReturnUrl" method="post">
        <form-section>
            <div asp-validation-summary="All"></div>
            <form-group>
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName"></span>
            </form-group>
            <form-group>
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName"></span>
            </form-group>
            <form-group>
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email"></span>
            </form-group>
            @Html.EditorFor(i => i.PhoneNumberViewModel, "PhoneNumber", Model.PhoneNumberViewModel)
            <form-group>
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password"></span>
            </form-group>
            <form-group>
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword"></span>
            </form-group>
            <form-buttons>
                <button type="submit" class="btn btn-default">Register</button>
            </form-buttons>
        </form-section>
    </form>
</form-wrapper>

