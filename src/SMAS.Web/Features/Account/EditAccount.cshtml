@model SMAS.Web.Features.Account.Models.EditAccountViewModel

@{
    PageSettings.Title = "Edit Account";
}

<form-wrapper columns="6">
    <form asp-controller="Account" asp-action="EditAccount" method="post">
        <form-section class="mdl-card mdl-card--expand mdl-shadow--6dp">
            <form-group>
                <label asp-for="FirstName">First Name</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName">Please enter your first name.</span>
            </form-group>
            <form-group>
                <label asp-for="LastName">Last Name</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName">Please enter your last name.</span>
            </form-group>
            <form-group>
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email">Please enter a valid email address.</span>
            </form-group>
            @Html.EditorFor(i => i.PhoneNumberViewModel, "PhoneNumber", Model.PhoneNumberViewModel)
            <form-buttons class="mdl-card__actions mdl-card--border">
                <button type="submit" class="btn btn-default">Continue</button>
            </form-buttons>
        </form-section>
    </form>
</form-wrapper>
