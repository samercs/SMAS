@using ChangePasswordViewModel = SMAS.Web.Features.Account.Models.ChangePasswordViewModel
@model SMAS.Web.Features.Account.Models.ChangePasswordViewModel

@{
    PageSettings.Title = "Change Password";
}

<form-wrapper columns="6">
    <form asp-controller="Account" asp-action="ChangePassword" method="post">
        <form-section>
            <form-group>
                <label asp-for="CurrentPassword">Current Password</label>
                <input asp-for="CurrentPassword" class="form-control" type="password" />
                <span asp-validation-for="CurrentPassword">Please enter a password with at least 8 characters.</span>
            </form-group>
            <form-group>
                <label asp-for="NewPassword">New Password</label>
                <input asp-for="NewPassword" class="form-control" type="password" />
                <span asp-validation-for="NewPassword">Please enter a password with at least 8 characters.</span>
            </form-group>
            <form-group>
                <label asp-for="ConfirmPassword">Confirm Password</label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" />
                <span asp-validation-for="ConfirmPassword">Please enter a password with at least 8 characters.</span>
            </form-group>
            <form-buttons>
                <button type="submit" class="btn btn-default">Change Password</button>
            </form-buttons>
        </form-section>
    </form>
</form-wrapper>
