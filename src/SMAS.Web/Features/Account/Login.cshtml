@using SMAS.Entities
@model SMAS.Web.Features.Account.Models.LoginViewModel
@inject SignInManager<User> SignInManager

@{
    PageSettings.Title = "Log In";
}

<form-wrapper columns="5">
    <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@Model.ReturnUrl" method="post">
        <form-section>
            <form-group>
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control">
                <span asp-validation-for="Email"></span>
            </form-group>
            <form-group>
                <label asp-for="Password">Password</label>
                <input asp-for="Password" class="form-control" type="password">
                <span asp-validation-for="Password"></span>
            </form-group>
            <form-group>
                <div class="checkbox">
                    <input asp-for="RememberMe" type="checkbox">
                    <label for="@Html.IdFor(m => m.RememberMe)">Remember me</label>
                </div>
            </form-group>
            <form-buttons>
                <button type="submit" class="btn btn-default">Login</button>
            </form-buttons>
        </form-section>
    </form>
    
    <p>
        <a href="@Url.Action("ForgotPassword", "Account")">Need Password?</a>
        <a href="@Url.Action("Register", "Account")">Register</a>
    </p>
</form-wrapper>
